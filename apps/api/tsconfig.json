{
	"extends": "tsconfig/base.json",
	"compilerOptions": {
		"module": "commonjs",
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2017",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"paths": {
			"shared/*": ["../../packages/shared/*"]
		}
	},
	"exclude": ["dist", "src/repositories", "node_modules"],
	"include": ["src"]
}
